---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Publications - Udbhav Tripathi">
	<div class="container">
		<h1>Publications</h1>

		<section class="year-section">
			<h2>2024</h2>
			<div class="publication">
				<h3>[Publication Title]</h3>
				<p class="authors">[Authors]</p>
				<p class="venue">[Journal/Conference]</p>
				<div class="links">
					<a href="#" target="_blank">PDF</a>
					<a href="#" target="_blank">Code</a>
					<a href="#" target="_blank">Citation</a>
				</div>
			</div>
		</section>

		<section class="year-section">
			<h2>2023</h2>
			<div class="publication">
				<h3>[Publication Title]</h3>
				<p class="authors">[Authors]</p>
				<p class="venue">[Journal/Conference]</p>
				<div class="links">
					<a href="#" target="_blank">PDF</a>
					<a href="#" target="_blank">Code</a>
					<a href="#" target="_blank">Citation</a>
				</div>
			</div>
		</section>
	</div>
</Layout>

<style>
	.year-section {
		margin-bottom: 3rem;
	}

	.publication {
		margin-bottom: 2rem;
		padding-left: 1rem;
		border-left: 3px solid var(--secondary-color);
	}

	.publication h3 {
		color: var(--primary-color);
		margin-bottom: 0.5rem;
	}

	.authors {
		color: #666;
		margin-bottom: 0.5rem;
	}

	.venue {
		font-style: italic;
		color: #666;
		margin-bottom: 0.5rem;
	}

	.links {
		margin-top: 0.5rem;
	}

	.links a {
		margin-right: 1rem;
		color: var(--secondary-color);
		text-decoration: none;
	}

	.links a:hover {
		text-decoration: underline;
	}
</style>
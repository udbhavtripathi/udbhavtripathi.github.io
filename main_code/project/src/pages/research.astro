	.research-project {
		margin-bottom: 3rem;
	}

	.research-project h2 {
		color: var(--secondary-color);
		margin-bottom: 1rem;
	}

	.research-project p {
		text-align: justify;
		margin-bottom: 1rem;
	}

	.research-project ul {
		margin-left: 2rem;
		margin-bottom: 1rem;
	}

	.research-project li {
		margin-bottom: 0.5rem;
	}
</style>